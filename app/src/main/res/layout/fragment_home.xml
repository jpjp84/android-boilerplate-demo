<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="viewModel"
            type="com.jp.boilerplate.ui.home.HomeViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jp.boilerplate.ui.view.CollapsibleCalendar
            android:id="@+id/home_calendar_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:bindItems="@{viewModel.calendar}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior=".ui.view.collapsiblecalendar.CollapsibleCalendarBehavior" />

        <com.jp.boilerplate.ui.view.collapsiblecalendar.CollapsibleCalendarBottom
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#123123" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
